<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <!-- <td><%= link_to 'Show', user %></td>  --> 
        <td><a href="javascript:show_user(<%= user.id %>)">Show</a></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td> 
        <td><a href="javascript:editModal(<%= user.id %>)">Edit modal</a></td>   
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><a href="javascript:show_micropost(<%= user.id %>)">Show MicroPost</a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

<div id="showUser" style="display:none;">
  <p>
      <strong>Name:</strong><label id="name"></label>
  </p>
  <p>
    <strong>Email:</strong><label id="email"></label>    
  </p>
</div>

<div id="editUser" style="display:none;">
   
</div>

<div id="showMicroPost" style="display:none;">
  <h1>Microposts</h1>
  <table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="tbodymicrop">    
  </tbody>
</table>
</div>

